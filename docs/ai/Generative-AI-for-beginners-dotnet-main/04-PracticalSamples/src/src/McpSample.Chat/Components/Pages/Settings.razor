    }

    .btn-primary {
        background-color: #6a1b9a;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #4a148c;
        }

    .btn-secondary {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 10px;
    }

        .btn-secondary:hover {
            background-color: #0056b3;
        }

    .save-message {
        margin-top: 20px;
